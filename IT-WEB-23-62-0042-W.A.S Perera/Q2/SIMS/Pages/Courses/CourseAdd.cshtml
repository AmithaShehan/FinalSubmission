@page
@model SIMS.Pages.Courses.CourseAdd
@{
    ViewData["Title"] = "Create Course";
}

<div class="container">
    <div class="row">
        <div class="col col-md-6 offset-md-3">
            <form method="post">
                <legend>Add a Course</legend>
                <div class="mb-3">
                    <label for="txtCourseName" class="form-label">Course Name</label>
                    <input type="text" asp-for="NewCourse.CourseName" class="form-control" id="txtCourseName"
                        aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="txtLecturerName" class="form-label">Lecturer Name</label>
                    <input type="text" asp-for="NewCourse.LecturerName" class="form-control" id="txtLecturerName"
                        aria-describedby="emailHelp">
                </div>             
                <button type="submit" class="btn btn-primary">Create Course</button>
            </form>
        </div>
    </div>
</div>